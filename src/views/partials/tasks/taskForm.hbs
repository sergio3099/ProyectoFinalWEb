<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>Buscar Pasantias</h3>
  <form action="/tasks/add" method="post">

    {{! Title Input }}
    <div class="mb-3">
      <label for="title">Nombres</label>
      <input
        id="title"
        class="form-control rounded-0 bg-dark text-white"
        type="text"
        name="title"
        placeholder=""
        autofocus
      />
    </div>

    {{! Description Input }}
    <div class="mb-3">
      <label for="description">Empresa</label>
      <textarea
        class="form-control rounded-0 bg-dark text-white"
        name="description"
        cols="80"
        placeholder=""
      ></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Buscar</button>
  </form>
</div>